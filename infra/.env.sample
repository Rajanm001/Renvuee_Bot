# Environment Configuration for Telegram Revenue Copilot

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_telegram_chat_id

# Google API Configuration
GOOGLE_SHEETS_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_SHEETS_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_knowledge_base_folder_id
CONVERSATIONS_SHEET_ID=your_conversations_google_sheet_id
CRM_SHEET_ID=your_crm_google_sheet_id

# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=n8n

# n8n Configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678
TIMEZONE=UTC

# Service Configuration
LOG_LEVEL=INFO
DEFAULT_OWNER=System

# Vector Database Configuration
CHROMA_PERSIST_DIR=./data/chroma
ANONYMIZED_TELEMETRY=FALSE

# Render Deployment Configuration (for production)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
PORT=10000

# Security Configuration
JWT_SECRET=your_jwt_secret_for_api_auth
API_RATE_LIMIT=100
MAX_FILE_SIZE_MB=10

# Monitoring Configuration
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Development Configuration
DEV_MODE=false
DEBUG_AGENTS=false